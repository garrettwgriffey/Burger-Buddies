<h1>Burger Buddies</h1>

<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
  	<li>
       <p>Burger: {{this.burger_name}}</p>
       <button type="button" class="btn btn-primary burger-btn" value = {{this.id}}>Devour</button>
  	</li>
    {{/unless}}
  {{/each}}
</ul>

<ul>
  {{#each burgers}}
  {{#if this.devoured}}
  	<li>
       <p>Burger: {{this.burger_name}}</p>
  	</li>
    {{/if}}
  {{/each}}
</ul>

<div>
  <form action="/api/burger" method="POST">
  	<input type="text" name="burger_name"/>

  	<button type="submit">Submit</button>
  </form>
</div>